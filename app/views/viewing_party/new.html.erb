<%= form_with url: "/users/#{@user.id}/movies/#{@movie.id}/viewing_party", method: :post, data: { turbo: false }, local: true do |form| %>
  <div>
    <%= form.label :duration, "Party Duration:" %> (in minutes)
    <%= form.number_field :duration, value: @movie.runtime, min: @movie_runtime %>
  </div>

  <div>
    <%= form.label :date, 'Date' %>
    <%= form.date_field :date, id: 'party_date' %>
  </div>

  <div>
    <%= form.label :start_time, 'Start time' %>
    <%= form.time_field :start_time %>
  </div>

  <h3>Guests (Optional)</h3>

  <% 3.times do |i| %>
    <div class="guests">
      <%= form.label "guest#{i + 1}", "Guest #{i + 1} Email" %>
      <%= form.email_field "guest#{i + 1}", class: 'guests', placeholder: 'Enter guest email (optional)' %>
    </div>
  <% end %>

  <%= form.submit 'Create Viewing Party', class: "btn btn-primary" %>
<% end %>