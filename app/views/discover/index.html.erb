<div class="container">
  <h1>Discover Movies</h1>

  <div class="search-section">
    <%= form_tag("/movies", method: "get") do %>
      <div class="form-group">
        <%= text_field_tag(:search_keywords, nil, placeholder: "search") %>
        <%= submit_tag("Search by Movie Title") %>
      </div>
    <% end %>
  </div>

  <div class="discover-section">
    <%= link_to "Discover Top Rated Movies", "/movies/top_rated", class: "btn btn-primary" %>
  </div>
</div>